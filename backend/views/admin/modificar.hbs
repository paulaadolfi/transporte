<div class="container" style="margin:100px auto">
    <div class="row" >
        <div class="col-6 offset-3">
            <h4>Modificar novedad</h4>
            <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Titulo" name="titulo" value="{{novedad.titulo}}">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Subtitulo" name="subtitulo" value="{{novedad.subtitulo}}" >
                </div>
                <div class="form-group">
                    <p>
                        <label> Imagen: <input type="file" class="form-control" name="imagen" id="imagen"/></label>
                    </p>
                    <p>
                        <label><input type="checkbox" name="img_delete" id="img_delete" value="1" />
                        Eliminar imagen actual?</label>
                        <input type="hidden" value="{{novedad.img_id}}" name="img_original">
                    </p>
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" placeholder="Cuerpo" name="cuerpo">{{novedad.cuerpo}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            {{#if error}}
            <p>{{message}} </p>
            {{/if}}
        </div>
    </div>
</div>